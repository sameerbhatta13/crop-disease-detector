{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", // Required for "paths"
    "paths": {
      "@/*": [
        "./*"
      ] // Maps "@" to root folders like app/, components/, hooks/, etc.
    }
  },
  "include": [
    "src",
    "app",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "expo-router.d.ts",
    "@types/env.d.ts"
  ]
}